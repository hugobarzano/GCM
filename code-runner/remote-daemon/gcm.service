[Unit]
Description=GCM:code-runner
After=network.target

[Service]
Environment=DOCKER_CERT_PATH="/opt/GCM/code-runner/env/google/remote-daemon/client"
Environment=DOCKER_HOST="https://127.0.0.1:5555"
Type=simple
ExecStart=/bin/sh -c '/opt/GCM/code-runner/code-runner.linux --config /opt/GCM/code-runner/env/google/gcp-config.json '
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target